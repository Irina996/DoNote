<Window
    x:Class="WpfNotes.Views.NoteWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfNotes.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:WpfNotes.ViewModels"
    Title="NoteWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=viewModel:NoteViewModel}"
    FontFamily="{StaticResource Excalifont}"
    FontSize="14"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="49*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Row="0"
            Grid.Column="0"
            Width="150"
            Height="30"
            Margin="0,0,0,5"
            Padding="20,5,20,5"
            HorizontalAlignment="Left"
            Background="#f5f3e5"
            Command="{Binding BackCommand}"
            Content="←Notes" />
        <Button
            Grid.Row="0"
            Grid.Column="3"
            Width="150"
            Height="30"
            Margin="5,0,0,0"
            HorizontalAlignment="Right"
            Background="#ff99ac"
            Command="{Binding DeleteCommand}"
            Content="Delete" />
        <TextBox
            x:Name="NoteTitleTextBox"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="10,10,10,10"
            VerticalAlignment="Center"
            BorderThickness="0"
            FontSize="24"
            GotFocus="NoteTitleBox_GotFocus"
            LostFocus="NoteTitleBox_LostFocus"
            Text="{Binding Note.Title}" />
        <TextBlock
            x:Name="HintNoteTitleTextBlock"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="10,0,6,0"
            VerticalAlignment="Center"
            FontSize="24"
            Foreground="Gray"
            IsHitTestVisible="False"
            Text="Note title..."
            Visibility="Visible" />
        <TextBox
            x:Name="NoteContentTextBox"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="10,10,6,10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            AcceptsReturn="True"
            AcceptsTab="True"
            GotFocus="NoteContentTextBox_GotFocus"
            HorizontalScrollBarVisibility="Auto"
            LostFocus="NoteContentTextBox_LostFocus"
            Text="{Binding Note.Content}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
        <TextBlock
            x:Name="HintNoteContentTextBlock"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="10,10,6,10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Foreground="Gray"
            IsHitTestVisible="False"
            Text="Write something..."
            Visibility="Visible" />
        <ComboBox
            x:Name="categoryComboBox"
            Grid.Row="3"
            Grid.Column="0"
            Width="150"
            Height="30"
            Margin="10,5,10,10"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            DisplayMemberPath="Name"
            ItemsSource="{Binding Categories}"
            SelectedItem="{Binding Note.Category}" />
        <Button
            Grid.Row="3"
            Grid.Column="2"
            Width="150"
            Height="50"
            Margin="10,5,10,5"
            Command="{Binding CancelCommand}"
            Content="Cancel"
            Style="{DynamicResource RoundedButton}" />
        <Button
            Grid.Row="3"
            Grid.Column="3"
            Width="150"
            Height="50"
            Margin="10,5,6,5"
            Command="{Binding SaveCommand}"
            Content="Save"
            Style="{DynamicResource RoundedButton}" />
    </Grid>
</Window>
