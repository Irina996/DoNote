<Window
    x:Class="WpfNotes.Views.CategoryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfNotes.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CategoryWindow"
    Width="800"
    Height="Auto"
    FontFamily="{StaticResource Excalifont}"
    FontSize="14"
    SizeToContent="Height"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBox
            x:Name="CategoryTextBox"
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Margin="10"
            Padding="5"
            GotFocus="CategoryTextBox_GotFocus"
            LostFocus="CategoryTextBox_LostFocus"
            Text="{Binding Category.Name}" />
        <TextBlock
            x:Name="CategoryHintBox"
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Margin="10"
            Padding="5"
            Foreground="Gray"
            IsHitTestVisible="False"
            Text="Category name..."
            Visibility="Visible" />
        <Button
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            Padding="10"
            Background="#ff99ac"
            Command="{Binding DeleteCommand}"
            Content="Delete"
            Style="{StaticResource RoundedButton}" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            Padding="10"
            Command="{Binding CancelCommand}"
            Content="Cancel"
            Style="{StaticResource RoundedButton}" />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Margin="10"
            Padding="10"
            Command="{Binding SaveCommand}"
            Content="Save"
            Style="{StaticResource RoundedButton}" />
    </Grid>
</Window>
