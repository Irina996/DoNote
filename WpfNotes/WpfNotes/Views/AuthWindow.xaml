<Window
    x:Class="WpfNotes.AuthWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfNotes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:WpfNotes.ViewModels"
    Title="AuthWindow"
    Width="800"
    Height="450"
    MinWidth="500"
    MinHeight="400"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewModel:AuthViewModel />
    </Window.DataContext>
    <TabControl
        x:Name="authTabControl"
        FontFamily="{StaticResource Excalifont}"
        FontSize="14">
        <TabItem x:Name="loginTab" Header="Login">
            <Grid x:Name="loginGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="0.4*" />
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height="0.4*" />
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.4*" />
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height="0.6*" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Sign in" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Text="Email" />
                <TextBox
                    x:Name="loginEmailTextBox"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="5"
                    VerticalContentAlignment="Center"
                    FontSize="16"
                    Text="{Binding Email}" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Text="Password"
                    TextAlignment="Left" />
                <PasswordBox
                    x:Name="loginPasswordTextBox"
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="5"
                    VerticalContentAlignment="Center"
                    FontSize="16"
                    PasswordChanged="PasswordBox_PasswordChanged" />
                <StackPanel
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <CheckBox Content="Remember me" IsChecked="{Binding RememberMe}" />
                </StackPanel>
                <TextBlock
                    Grid.Row="6"
                    Grid.Column="1"
                    Foreground="Red"
                    Text="{Binding ErrorMessage}" />
                <Button
                    Grid.Row="7"
                    Grid.Column="1"
                    Margin="50,5,50,5"
                    Background="#FFEC99"
                    Click="Login_Click"
                    Command="{Binding LoginCommand}"
                    Content="Log in"
                    FontSize="20"
                    Style="{DynamicResource RoundedButton}" />
                <TextBlock
                    Grid.Row="8"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <Hyperlink Click="NavigateToRegister_Click" Foreground="Black">Don't have account? Register now</Hyperlink>
                </TextBlock>
            </Grid>
        </TabItem>
        <TabItem x:Name="registerTab" Header="Register">
            <Grid x:Name="registerGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.9*" />
                    <RowDefinition Height="0.4*" />
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height="0.4*" />
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height="0.4*" />
                    <RowDefinition Height="0.6*" />
                    <RowDefinition Height="0.5*" />
                    <RowDefinition Height="0.4*" />
                    <RowDefinition Height="0.9*" />
                    <RowDefinition Height="0.6*" />
                </Grid.RowDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="24"
                    FontWeight="Bold"
                    Text="Create account" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Text="Email" />
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="5"
                    VerticalContentAlignment="Center"
                    FontSize="16"
                    Text="{Binding Email}" />
                <TextBlock
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Text="Password"
                    TextAlignment="Left" />
                <PasswordBox
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="5"
                    VerticalContentAlignment="Center"
                    FontSize="16"
                    PasswordChanged="PasswordBox_PasswordChanged" />
                <TextBlock
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Text="Confirm Password"
                    TextAlignment="Left" />
                <PasswordBox
                    Grid.Row="6"
                    Grid.Column="1"
                    Margin="5"
                    VerticalContentAlignment="Center"
                    FontSize="16"
                    PasswordChanged="ConfirmPasswordBox_PasswordChanged" />
                <StackPanel
                    Grid.Row="7"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <CheckBox Content="Remember me" IsChecked="{Binding RememberMe}" />
                </StackPanel>
                <TextBlock
                    Grid.Row="8"
                    Grid.Column="1"
                    Foreground="Red"
                    Text="{Binding ErrorMessage}" />
                <Button
                    Grid.Row="9"
                    Grid.Column="1"
                    Margin="50,15,50,5"
                    Background="#FFEC99"
                    Command="{Binding RegisterCommand}"
                    Content="Register"
                    FontSize="20"
                    Style="{DynamicResource RoundedButton}" />
                <TextBlock
                    Grid.Row="10"
                    Grid.Column="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <Hyperlink Click="NavigateToLogin_Click" Foreground="Black">Already have account? Log in</Hyperlink>
                </TextBlock>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
