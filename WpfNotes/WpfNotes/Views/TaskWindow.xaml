<Window
    x:Class="WpfNotes.Views.TaskWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfNotes.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="TaskWindow"
    Width="800"
    Height="450"
    FontFamily="{StaticResource Excalifont}"
    FontSize="14"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Button
            Grid.Row="0"
            Grid.Column="0"
            Width="150"
            Height="30"
            Padding="20,5,20,5"
            HorizontalAlignment="Left"
            Background="#f5f3e5"
            Command="{Binding BackCommand}"
            Content="←Tasks" />
        <Button
            Grid.Row="0"
            Grid.Column="3"
            Width="150"
            Height="30"
            HorizontalAlignment="Right"
            Background="#ff99ac"
            Command="{Binding DeleteCommand}"
            Content="Delete" />
        <TextBox
            x:Name="TaskContentTextBox"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="10,10,6,10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            AcceptsReturn="True"
            AcceptsTab="True"
            GotFocus="TaskContentTextBox_GotFocus"
            HorizontalScrollBarVisibility="Auto"
            LostFocus="TaskContentTextBox_LostFocus"
            Text="{Binding TaskItem.Content}"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto" />
        <TextBlock
            x:Name="HintTaskContentTextBlock"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="10,10,6,10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Foreground="Gray"
            IsHitTestVisible="False"
            Text="Write something..."
            Visibility="Visible" />
        <ComboBox
            x:Name="categoryComboBox"
            Grid.Row="3"
            Grid.Column="0"
            Width="150"
            Height="30"
            Margin="10,5,10,10"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            DisplayMemberPath="Name"
            ItemsSource="{Binding Categories}"
            SelectedItem="{Binding TaskItem.Category}" />
        <xctk:DateTimePicker
            Grid.Row="3"
            Grid.Column="1"
            Margin="10"
            Padding="10"
            Value="{Binding TaskItem.Notification}" />
        <Button
            Grid.Row="3"
            Grid.Column="2"
            Width="150"
            Height="50"
            Margin="10,5,10,5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Command="{Binding CancelCommand}"
            Content="Cancel"
            Style="{DynamicResource RoundedButton}" />
        <Button
            Grid.Row="3"
            Grid.Column="3"
            Width="150"
            Height="50"
            Margin="10,5,10,5"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Command="{Binding SaveCommand}"
            Content="Save"
            Style="{DynamicResource RoundedButton}" />
    </Grid>
</Window>
