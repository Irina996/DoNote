<Window
    x:Class="WpfNotes.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:WpfNotes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:WpfNotes.ViewModels"
    xmlns:views="clr-namespace:WpfNotes.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    FontFamily="{StaticResource Excalifont}"
    FontSize="14"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>
    <TabControl>
        <TabItem Header="Notes">
            <views:NotesView DataContext="{Binding NotesViewModel}" />
        </TabItem>
        <TabItem Header="Tasks">
            <views:TasksView DataContext="{Binding TasksViewModel}" />
        </TabItem>
    </TabControl>
</Window>
