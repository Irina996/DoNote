<Window
    x:Class="WpfNotes.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:WpfNotes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:WpfNotes.ViewModels"
    xmlns:views="clr-namespace:WpfNotes.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    FontFamily="{StaticResource Excalifont}"
    FontSize="14"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>
    <TabControl>
        <TabItem Header="Notes">
            <views:NotesView DataContext="{Binding NotesViewModel}" />
        </TabItem>
        <TabItem Header="Tasks">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.35*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--  Left Panel (Categories)  -->
                <StackPanel
                    Grid.Column="0"
                    Background="White"
                    Orientation="Vertical">
                    <TextBlock Margin="5">Categories</TextBlock>
                    <TextBox Margin="10" Text="New..." />
                    <ListBox x:Name="tasksCategoriesListBox" />
                </StackPanel>
                <GridSplitter
                    Grid.Column="1"
                    Width="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Stretch"
                    ShowsPreview="False" />

                <!--  Right Panel (Tasks)  -->
                <Grid Grid.Column="2" Background="#f5f3e5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBox
                        Grid.Row="0"
                        Margin="10"
                        VerticalAlignment="Top"
                        Text="Search" />
                    <ListBox
                        Grid.Row="1"
                        Margin="5"
                        Background="Transparent" />
                    <Button
                        Grid.Row="1"
                        Width="80"
                        Height="50"
                        Margin="0,0,20,30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Background="#FFEC99"
                        Content="Add"
                        FontSize="20"
                        Style="{StaticResource RoundedButton}" />
                </Grid>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
